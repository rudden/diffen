{
	"compilerOptions": {
		"strict": true,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"strictPropertyInitialization": false,
		"lib": [
			"dom",
			"es2016"
		],
		"typeRoots": [
			"./node_modules/@types/"
		],
		"types": [
			"node"
		]
	},
	"exclude": [
		"node_modules"
	]
}